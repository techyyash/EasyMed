<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".patient_doctor_profile">

    <androidx.cardview.widget.CardView
        android:id="@+id/pharmacy_hospital_home_card"
        android:layout_width="407dp"
        android:layout_height="204dp"
        android:layout_marginTop="3dp"
        app:cardBackgroundColor="#48DEDE"
        app:cardCornerRadius="100dp"
        app:cardElevation="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView

            android:id="@+id/image_pharmacy_hospital"
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/patientlogo" />


        <TextView
            android:id="@+id/doc_mail_extract"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="170dp"
            android:fontFamily="@font/delius_unicase"
            android:text="Prescribe Medicine to the patient"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold|italic" />


    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/med_name_label"
        android:layout_width="244dp"
        android:layout_height="52dp"
        android:fontFamily="@font/delius_unicase"
        android:gravity="bottom"
        android:text="Patient UserName"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.311"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pharmacy_hospital_home_card"
        app:layout_constraintVertical_bias="0.043" />


    <EditText
        android:id="@+id/med_name_value"
        android:layout_width="303dp"
        android:layout_height="48dp"
        android:ems="10"
        android:fontFamily="@font/delius_unicase"
        android:text="Palani Kumar"
        android:textColor="#00C301"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/med_name_label"
        app:layout_constraintVertical_bias="0.025" />

    <TextView
        android:id="@+id/doc_phno_value"
        android:layout_width="228dp"
        android:layout_height="46dp"
        android:ems="10"
        android:fontFamily="@font/delius_unicase"
        android:gravity="bottom"
        android:text="Cause Of Visit"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.284"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/med_name_value"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/doc_add_value"
        android:layout_width="300dp"
        android:layout_height="148dp"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:fontFamily="@font/delius_unicase"
        android:gravity="center"
        android:text="1.paracitamol 650mg "
        android:textColor="#00C301"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.138" />

    <EditText
        android:id="@+id/doc_spec_value"
        android:layout_width="302dp"
        android:layout_height="51dp"
        android:layout_marginBottom="64dp"
        android:ems="10"
        android:fontFamily="@font/delius_unicase"
        android:text="Mild Fever"
        android:textColor="#00C301"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/doc_phno_value"
        app:layout_constraintVertical_bias="0.026" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="49dp"
        android:layout_height="49dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/med_name_label"
        app:layout_constraintVertical_bias="0.384"
        app:srcCompat="@drawable/pharmacylogo" />

    <TextView
        android:id="@+id/pat_pres_value"
        android:layout_width="228dp"
        android:layout_height="46dp"
        android:ems="10"
        android:fontFamily="@font/delius_unicase"
        android:gravity="bottom"
        android:text="Prescription"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.688"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/med_name_value"
        app:layout_constraintVertical_bias="0.285" />

    <Button
        android:id="@+id/update_hospital_profile"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:background="@drawable/rounded_corner"
        android:text="SUBMIT"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/doc_add_value"
        app:layout_constraintVertical_bias="0.238" />

</androidx.constraintlayout.widget.ConstraintLayout>