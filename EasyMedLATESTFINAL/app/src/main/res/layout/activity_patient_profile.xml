        android:layout_height="214dp"
        app:cardBackgroundColor="#FDB777"
        app:cardCornerRadius="100dp"
        app:cardElevation="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.006">

        <ImageView

            android:id="@+id/image_pharmacy_hospital"
            android:layout_width="140dp"
            android:layout_height="160dp"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/patientlogo" />


        <TextView
            android:id="@+id/hospital_pharmacy_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="160dp"
            android:fontFamily="@font/delius_unicase"
            android:text="PATIENT PROFILE"
            android:textColor="@color/black"
